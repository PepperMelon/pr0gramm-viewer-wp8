             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             d:DesignHeight="480"
             d:DesignWidth="480"
             mc:Ignorable="d">
    <UserControl.Resources>
        <extensions:DatetimeAgoConverter x:Key="DatetimeAgoConverter" />
